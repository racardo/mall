.frist_tab .good_item {
  display: flex;
  border: 2rpx solid #ccc;
}
.frist_tab .good_item .good_image_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.frist_tab .good_item .good_image_warp image {
  width: 70%;
}
.frist_tab .good_item .good_info_warp {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.frist_tab .good_item .good_info_warp .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.frist_tab .good_item .good_info_warp .good_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
